<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/sidebar.css" />
    <style>
        .report-card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
            transition: transform 0.2s;
        }
        .insight-box {
            border-left: 5px solid #dc3545;
            background: #fff5f5;
            padding: 15px;
            border-radius: 4px;
            margin-bottom: 10px;
        }
        .insight-box.success {
            border-left-color: #198754;
            background: #f0fff4;
        }
    </style>
</head>
<body>
    <%- include('../partials/_sidebar') %>

    <main class="main-content">
        <div class="container-fluid p-4">
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold mb-1">Impact Analysis Report</h2>
                    <p class="text-muted mb-0">Training: <%= training.title %> | Theme: <%= training.theme %></p>
                </div>
                <div>
                    <button onclick="window.print()" class="btn btn-outline-dark me-2"><i class="bi bi-printer"></i> Print Report</button>
                    <a href="/trainings/<%= training.id %>" class="btn btn-primary">Back to Details</a>
                </div>
            </div>

            <div class="row g-4">
                
                <div class="col-lg-8">
                    <div class="card report-card h-100">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0"><i class="bi bi-bar-chart-fill me-2"></i>Topic-wise Failure Rate</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="impactChart" style="max-height: 400px;"></canvas>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card report-card h-100">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0"><i class="bi bi-lightbulb-fill me-2 text-warning"></i>AI Insights</h5>
                        </div>
                        <div class="card-body">
                            <h6 class="text-uppercase text-muted small fw-bold mb-3">Recommended Actions</h6>
                            
                            <% if(insights && insights.length > 0) { %>
                                <% insights.forEach(text => { %>
                                    <div class="insight-box <%= text.includes('EXCELLENT') ? 'success' : '' %>">
                                        <%- text %>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <p class="text-muted">No data available for insights.</p>
                            <% } %>

                            <hr>
                            <div class="alert alert-info small">
                                <i class="bi bi-info-circle-fill me-2"></i>
                                These insights are generated based on the aggregate wrong answers from all participants.
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // Data passed from Controller
        const labels = <%- JSON.stringify(chartData.labels) %>;
        const data = <%- JSON.stringify(chartData.failureRates) %>;
        const colors = <%- JSON.stringify(chartData.colors) %>;

        const ctx = document.getElementById('impactChart').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Failure Rate (%)',
                    data: data,
                    backgroundColor: colors,
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        title: {
                            display: true,
                            text: 'Percentage of Wrong Answers'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return `Failure Rate: ${context.raw}%`;
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>