<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= pageTitle %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/sidebar.css">
    <link rel="stylesheet" href="/css/manage_partners.css">
</head>

<body>
    <%- include('../partials/_sidebar') %>

        <main class="main-content">
            <header class="page-header">
                <h1>Manage Partners</h1>

                <!-- new filter logic linked with src/controllers/adminController.js -->
                <% if (user.role === 'ndma_admin') { %>
                    <div class="state-filter-container d-flex align-items-center mb-3">
                        <label for="state-filter" class="form-label me-2 mb-0 fw-bold">Filter by State:</label>
                        <select class="form-select w-auto" id="state-filter" aria-label="Filter partners by state">
                            <option value="" <%= selectedState === '' ? 'selected' : '' %>>All States</option>
                            <% allStates.forEach(state => { %>
                                <option value="<%= state %>" <%= selectedState === state ? 'selected' : '' %>>
                                    <%= state %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                <% } %>
                <!-- newend further linked with src/views/pages/manage_partners.ejs-->
            </header>
            

            <nav class="nav nav-tabs" id="partnerTabs" role="tablist">
                <button class="nav-link active" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending"
                    type="button" role="tab">
                    Pending Approvals
                    <% if (pendingPartners.length> 0) { %>
                        <span class="badge rounded-pill bg-warning text-dark">
                            <%= pendingPartners.length %>
                        </span>
                        <% } %>
                </button>
                <button class="nav-link" id="approved-tab" data-bs-toggle="tab" data-bs-target="#approved" type="button"
                    role="tab">Approved</button>
                <button class="nav-link" id="rejected-tab" data-bs-toggle="tab" data-bs-target="#rejected" type="button"
                    role="tab">Rejected</button>
            </nav>

            <div class="tab-content" id="partnerTabsContent">
                <div class="tab-pane fade show active" id="pending" role="tabpanel">
                    <div class="card mt-3">
                        <div class="card-body">
                            <% if (pendingPartners.length> 0) { %>
                                <div class="partner-list" id="pending-list-container">
                                    <% pendingPartners.forEach(partner=> { %>
                                        <div class="partner-card" id="user-row-<%= partner.id %>">
                                            <div class="partner-avatar"><span>
                                                    <%= partner.name.charAt(0) %>
                                                </span></div>
                                            <div class="partner-info">
                                                <div class="partner-name">
                                                    <%= partner.name %>
                                                </div>
                                                <div class="partner-org text-muted">
                                                    <%= partner.organization_name %> &bull; <%= partner.state %>
                                                </div>
                                            </div>
                                            <div class="partner-actions">
                                                <a href="/api/admin/documents/<%= partner.document_url.split('/')[2] %>"
                                                    class="btn btn-sm btn-outline-secondary">
                                                    <i class="bi bi-file-earmark-text"></i> View Document
                                                </a>
                                                <button class="btn btn-sm btn-success update-status-btn"
                                                    data-userid="<%= partner.id %>" data-status="active"><i
                                                        class="bi bi-check-lg"></i> Approve</button>
                                                <button class="btn btn-sm btn-danger update-status-btn"
                                                    data-userid="<%= partner.id %>" data-status="rejected"><i
                                                        class="bi bi-x-lg"></i> Reject</button>
                                            </div>
                                        </div>
                                        <% }) %>
                                </div>
                                <% } else { %>
                                    <div class="empty-state">
                                        <i class="bi bi-check2-circle"></i>
                                        <h2>All Clear!</h2>
                                        <p class="text-muted">There are no pending partner registrations to review.</p>
                                    </div>
                                    <% } %>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="approved" role="tabpanel">
    <div class="card mt-3">
        <div class="card-body">
            <% if (activePartners.length > 0) { %>
                <div class="partner-list" id="active-list-container">
                    <% activePartners.forEach(partner => { %>
                        <div class="partner-card" id="user-row-<%= partner.id %>">
                            <div class="partner-avatar partner-avatar-active"><span><%= partner.name.charAt(0) %></span></div>
                            <div class="partner-info">
                                <a href="/admin/manage-partners/<%= partner.id %>" class="partner-name-link"><%= partner.name %></a>
                                <div class="partner-org text-muted"><%= partner.organization_name %> &bull; <%= partner.state %></div>
                            </div>
                            <div class="partner-actions">
                                <button class="btn btn-sm btn-outline-danger update-status-btn" data-userid="<%= partner.id %>" data-status="rejected">
                                    <i class="bi bi-x-circle"></i> Discontinue
                                </button>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="bi bi-people"></i>
                    <h2>No Approved Partners</h2>
                    <p class="text-muted">Approved training partners will appear here.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

                <div class="tab-pane fade" id="rejected" role="tabpanel">
    <div class="card mt-3">
        <div class="card-body">
            <% if (rejectedPartners.length > 0) { %>
                <div class="partner-list" id="rejected-list-container">
                    <% rejectedPartners.forEach(partner => { %>
                        <div class="partner-card" id="user-row-<%= partner.id %>">
                            <div class="partner-avatar partner-avatar-rejected"><span><%= partner.name.charAt(0) %></span></div>
                            <div class="partner-info">
                                <div class="partner-name"><%= partner.name %></div>
                                <div class="partner-org text-muted"><%= partner.organization_name %> &bull; <%= partner.state %></div>
                            </div>
                            <div class="partner-actions">
                                <button class="btn btn-sm btn-outline-success update-status-btn" data-userid="<%= partner.id %>" data-status="active">
                                    <i class="bi bi-check-circle"></i> Re-Approve
                                </button>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="bi bi-slash-circle"></i>
                    <h2>No Rejected Partners</h2>
                    <p class="text-muted">Rejected partner applications will appear here.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>
            </div>

        </main>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/js/admin.js"></script>


        <!-- new linked with above code -->

        <% if (user.role === 'ndma_admin') { %>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const stateFilter = document.getElementById('state-filter');

                if (stateFilter) {
                    stateFilter.addEventListener('change', function() {
                        const selectedState = this.value;
                        let url = window.location.pathname;
                        const params = new URLSearchParams(window.location.search);
                        
                        // 1. Set/Delete the 'state' filter parameter
                        if (selectedState) {
                            params.set('state', selectedState);
                        } else {
                            params.delete('state');
                        }

                        // 2. Preserve the currently active tab in a 'tab' query parameter
                        const activeTabEl = document.querySelector('#partnerTabs .nav-link.active');
                        // Get the target tab pane ID (e.g., 'pending', 'approved', 'rejected')
                        const activeTabId = activeTabEl ? activeTabEl.getAttribute('data-bs-target').substring(1) : 'pending';
                        
                        // Only add the 'tab' parameter if it's not the default 'pending' tab
                        if (activeTabId && activeTabId !== 'pending') {
                            params.set('tab', activeTabId);
                        } else {
                            params.delete('tab');
                        }

                        // 3. Navigate to the new URL with updated parameters
                        window.location.href = url + '?' + params.toString();
                    });
                }
                
                // 4. On page load, re-activate the correct tab based on the 'tab' query parameter
                const urlParams = new URLSearchParams(window.location.search);
                // Default to 'pending' if no 'tab' parameter exists
                const activeTabId = urlParams.get('tab') || 'pending';
                
                const tabEl = document.getElementById(activeTabId + '-tab');
                const paneEl = document.getElementById(activeTabId);

                if(tabEl && paneEl) {
                    // Manually activate the selected tab link and its corresponding pane
                    // Bootstrap 5 tabs are initialized but we need to ensure the correct one is 'active' on page load due to the full reload.

                    // Deactivate all default active classes from the HTML before activating the correct one
                    document.querySelectorAll('#partnerTabs .nav-link').forEach(link => link.classList.remove('active'));
                    document.querySelectorAll('.tab-pane').forEach(pane => pane.classList.remove('show', 'active'));

                    // Activate the desired tab and pane
                    tabEl.classList.add('active');
                    paneEl.classList.add('show', 'active');
                }
            });
        </script>
        <% } %>

        <!-- new end filter logic done -->
</body>

</html>