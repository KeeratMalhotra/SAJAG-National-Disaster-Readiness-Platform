<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">SAJAG SDMA Portal</a>
            <div class="d-flex">
                <span class="navbar-text me-3">
                    Welcome, <%= user.name || 'Admin' %>
                </span>
                <a href="/api/auth/logout" class="btn btn-outline-light">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h2 class="mb-4">All Training Programs</h2>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Theme</th>
                            <th>Organization</th>
                            <th>Start Date</th>
                            <th>Location</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% trainings.forEach(training => { %>
                            <tr>
                                <td><%= training.title %></td>
                                <td><%= training.theme %></td>
                                <td><%= training.organization_name %></td>
                                <td><%= new Date(training.start_date).toLocaleDateString() %></td>
                                <td><%= training.location_text %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>