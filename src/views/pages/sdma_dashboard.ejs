<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= pageTitle %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link rel="stylesheet" href="/css/dashboard.css">

    <link rel="stylesheet" href="/css/learn-redesign.css" /> 
    <link rel="stylesheet" href="/css/sidebar.css" />
</head>

<body>

    <%- include('../partials/_sidebar') %> <main class="main-content">
        <div class="identity-header">
    <img src="/images/ndma.png" alt="NDMA Logo" class="logo">
    <div class="org-details text-center">
        <h1 class="org-name"><%= user.name %></h1>
        <p class="org-state"><%= user.organization_name %> &bull; <%= user.state %></p>
    </div>
    <img src="/images/<%= user.state.toLowerCase().replace(/ & /g, '-').replace(/\s+/g, '-') %>-logo.png" alt="<%= user.state %> SDMA Logo" class="logo state-emblem" onerror="this.style.display='none'">
    <!-- The SDMA logo is now dynamically generated from the user's state -->
</div>
        <header class="page-header">
            <h1>Dashboard for <%= state %></h1>
            <div class="header-actions">
                 <a href="/admin/manage-partners" class="btn btn-info"><i class="bi bi-person-check-fill"></i> Manage Partners</a>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#announcementModal"><i class="bi bi-plus-circle"></i> New Announcement</button>
                <button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#importModal"><i class="bi bi-upload"></i> Bulk Import</button>
                <button id="downloadReportBtn" class="btn btn-secondary"><i class="bi bi-download"></i> Download Report</button>
            </div>
        </header>

        <div id="report-content">
        
            <% if (locals.announcements && announcements.length > 0) { %>
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <strong><i class="bi bi-megaphone-fill"></i> <%= announcements[0].title %>:</strong> 
                    <%= announcements[0].content %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <div class="card mb-4">
                <div class="card-header"><%= state %> Training Map</div>
                <div class="card-body">
                    <div id="map" data-state="<%= state %>" style="height: 450px;"></div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">Training Program List</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Theme</th>
                                    <th>Organization</th>
                                    <th>Start Date</th>
                                    <th>Location</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% trainings.forEach(training=> { %>
                                    <tr>
                                        <td><%= training.title %></td>
                                        <td><span class="badge bg-secondary-subtle text-secondary-emphasis rounded-pill"><%= training.theme %></span></td>
                                        <td><%= training.organization_name %></td>
                                        <td><%= new Date(training.start_date).toLocaleDateString() %></td>
                                        <td><%= training.location_text %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div> </main>

    <div class="modal fade" id="announcementModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Announcement</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="announcementForm">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="title" required>
                        </div>
                        <div class="mb-3">
                            <label for="content" class="form-label">Content</label>
                            <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
                        </div>
                        <div id="announcement-message" class="mt-3"></div>
                        <div class="d-flex justify-content-end mt-3">
                            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Post Announcement</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <div class="modal fade" id="importModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Bulk Import Training Data</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                     <p>Upload a CSV file with historical training data. The file must match the template format.</p>
                     <a href="/trainings_template.csv" class="btn btn-sm btn-outline-secondary mb-3" download><i class="bi bi-filetype-csv"></i> Download CSV Template</a>
                     <hr>
                    <form id="importForm" enctype="multipart/form-data">
                        <div class="input-group">
                            <input type="file" class="form-control" name="trainingsCsv" accept=".csv" required>
                            <button class="btn btn-primary" type="submit">Upload</button>
                        </div>
                    </form>
                     <div id="import-message" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

    <script src="/js/reporting.js"></script>
    <script src="/js/import.js"></script>
    <script src="/js/sdma_dashboard.js"></script> <script src="/js/announcement.js"></script>

</body>
</html>