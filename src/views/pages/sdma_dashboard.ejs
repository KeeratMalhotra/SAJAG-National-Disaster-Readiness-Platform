<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- ADD THIS: Leaflet CSS for the map -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    
    <!-- ADD THIS: Style to give the map a height -->
    <style>
        #map { height: 400px; }
    </style>
</head>
<body class="bg-light">

    <%- include('../partials/_navbar') %>

    <div class="container mt-4">
        <% if (locals.announcements && announcements.length > 0) { %>
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <h4 class="alert-heading"><%= announcements[0].title %></h4>
                <p><%= announcements[0].content %></p>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
         <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">Dashboard for <%= state %></h2>
            <a href="/admin/manage-partners" class="btn btn-info">Manage Pending Partners</a>
        </div>

        <!-- ADD THIS: The map container card -->
        <div class="card mb-4">
            <div class="card-header"><%= state %> Training Map</div>
            <div class="card-body">
                <!-- This div needs the id="map" and the data-state attribute -->
                <div id="map" data-state="<%= state %>"></div>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">Training Program List</div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Theme</th>
                            <th>Organization</th>
                            <th>Start Date</th>
                            <th>Location</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% trainings.forEach(training => { %>
                            <tr>
                                <td><%= training.title %></td>
                                <td><%= training.theme %></td>
                                <td><%= training.organization_name %></td>
                                <td><%= new Date(training.start_date).toLocaleDateString() %></td>
                                <td><%= training.location_text %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card mt-4">
            <div class="card-header">Create a New Announcement</div>
            <div class="card-body">
                <form id="announcementForm">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="mb-3">
                        <label for="content" class="form-label">Content</label>
                        <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Post Announcement</button>
                    <div id="announcement-message" class="mt-3"></div>
                </form>
            </div>
        </div>   
    </div>
     

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="/js/sdma_dashboard.js"></script>
    <script src="/js/announcement.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>