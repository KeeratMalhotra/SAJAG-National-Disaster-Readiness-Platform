<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">SAJAG Partner Portal</a>
            <div class="d-flex">
                <span class="navbar-text me-3">
                    Welcome, <%= user.name || 'User' %>
                </span>
                <a href="/api/auth/logout" class="btn btn-outline-light">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Your Training Programs</h2>
            <a href="/trainings/new" class="btn btn-primary btn-lg">
                + Create New Training
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <% if (trainings.length > 0) { %>
                    <table class="table table-striped align-middle">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Theme</th>
                                <th>Start Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% trainings.forEach(training => { %>
                                <tr>
                                    <td><%= training.title %></td>
                                    <td><%= training.theme %></td>
                                    <td><%= new Date(training.start_date).toLocaleDateString() %></td>
                                    <td>
                                        <a href="/public/assessment/take/<%= training.id %>" target="_blank" class="btn btn-sm btn-outline-primary">
                                            Get Public Link
                                        </a>
                                        <button class="btn btn-sm btn-outline-secondary show-qr-btn" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#qrModal"
                                                data-url="<%= `http://localhost:3000/public/assessment/take/${training.id}` %>"
                                                data-title="<%= training.title %>">
                                            Show QR Code
                                        </button>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="text-center p-4">
                        <p class="mb-0">You haven't created any training programs yet.</p>
                        <p>Click the button above to get started!</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="modal fade" id="qrModal" tabindex="-1" aria-labelledby="qrModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="qrModalLabel">Assessment QR Code</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <p id="qrTrainingTitle"></p>
                    <div id="qrcode"></div>
                    <p class="mt-2"><small id="qrLink" class="text-muted"></small></p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/qrcode-generator/qrcode.js"></script>
    <script src="/js/tp_dashboard.js"></script>

</body>
</html>