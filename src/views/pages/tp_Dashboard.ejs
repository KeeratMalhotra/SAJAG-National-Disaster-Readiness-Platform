<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">SAJAG Partner Portal</a>
            <div class="d-flex">
                <span class="navbar-text me-3">
                    Welcome, <%= user.name || 'User' %>
                </span>
                <a href="/api/auth/logout" class="btn btn-outline-light">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Your Training Programs</h2>
            <a href="/trainings/new" class="btn btn-primary btn-lg">
                + Create New Training
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <% if (trainings.length > 0) { %>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Theme</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Location</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% trainings.forEach(training => { %>
                                <tr>
                                    <td><%= training.title %></td>
                                    <td><%= training.theme %></td>
                                    <td><%= new Date(training.start_date).toLocaleDateString() %></td>
                                    <td><%= new Date(training.end_date).toLocaleDateString() %></td>
                                    <td><%= training.location_text %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>

                <% } else { %>
                    <div class="text-center p-4">
                        <p class="mb-0">You haven't created any training programs yet.</p>
                        <p>Click the button above to get started!</p>
                    </div>
                <% } %>
                <table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Title</th>
            <th>Theme</th>
            <th>Start Date</th>
            <th>Location</th>
            <th>Actions</th> </tr>
    </thead>
    <tbody>
        <% trainings.forEach(training => { %>
            <tr>
                <td><%= training.title %></td>
                <td><%= training.theme %></td>
                <td><%= new Date(training.start_date).toLocaleDateString() %></td>
                <td><%= training.location_text %></td>
                <td>
                    <a href="/assessments/take/<%= training.id %>" class="btn btn-sm btn-outline-primary">
                        Take Quiz
                    </a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
            </div>
        </div>
    </div>

</body>
</html>