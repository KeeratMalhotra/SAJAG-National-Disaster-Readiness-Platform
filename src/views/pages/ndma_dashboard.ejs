<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <style>
        #map { height: 500px; } /* Adjusted height */
    </style>
</head>
<body class="bg-light">

    <%- include('../partials/_navbar') %>

    <div class="container mt-4">
        <% if (locals.announcements && announcements.length > 0) { %>
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <h4 class="alert-heading"><%= announcements[0].title %></h4>
                <p><%= announcements[0].content %></p>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Total Trainings Conducted</h5>
                        <p class="fs-2 fw-bold"><%= totalTrainings %></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Active Training Partners</h5>
                        <p class="fs-2 fw-bold"><%= uniquePartners %></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center text-bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">National Readiness Score</h5>
                        <p class="fs-2 fw-bold"><%= averageScore %>%</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                National Training Map
            </div>
            <div class="card-body">
                <div id="map"></div>
            </div>
        </div>
        
        <div class="row mt-4">
            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        Priority Training Gaps
                    </div>
                    <div class="card-body">
                        <% if (gaps.length > 0) { %>
                            <table class="table table-hover">
                                <tbody>
                                    <% gaps.forEach(gap => { %>
                                        <tr>
                                            <td><%= gap.district %></td>
                                            <td><%= gap.theme %></td>
                                            <td><%= gap.reason %></td>
                                            <td><span class="badge bg-danger"><%= gap.priority %></span></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <p class="text-center text-success">No critical training gaps detected. Well done!</p>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-header">Readiness Score by Theme</div>
                    <div class="card-body">
                        <canvas id="scoresByThemeChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mt-4">
        <div class="card-header">Create a New Announcement</div>
        <div class="card-body">
            <form id="announcementForm">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" required>
                </div>
                <div class="mb-3">
                    <label for="content" class="form-label">Content</label>
                    <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Post Announcement</button>
                <div id="announcement-message" class="mt-3"></div>
            </form>
        </div>
    </div>
    </div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script id="chart-data" data-scores="<%= JSON.stringify(scoresByTheme) %>"></script>
    
    <script src="/js/map.js"></script>
    <script src="/js/ndma_dashboard.js"></script>
    <script src="/js/announcement.js"></script>

</body>
</html>