<aside class="sidebar">
    <div class="sidebar-header">
    <a href="/" class="sidebar-logo">
        
        <div class="logo-text-wrapper">
            <span class="logo-main-text">SAJAG</span>
            <span class="logo-sub-text">Trainings Monitoring Portal</span>
        </div>
    </a>
</div>

    <nav class="sidebar-nav flex-grow-1">
        <a href="/dashboard" class="<%- (locals.activePage === 'dashboard') ? 'active' : '' %>">
            <i class="bi bi-grid-1x2-fill"></i> Dashboard
        </a>
        <a href="/announcements/all" class="<%- (locals.activePage === 'announcements') ? 'active' : '' %>">
            <i class="bi bi-megaphone-fill"></i> All Announcements
             <% if (locals.unreadCount && unreadCount > 0) { %>
        <span class="badge notification-badge rounded-pill bg-danger ms-auto">
            <%= unreadCount %>
        </span>
    <% } %>
        </a>
        <a href="/learn" class="<%- (locals.activePage === 'learn') ? 'active' : '' %>">
            <i class="bi bi-book-fill"></i> Learn
        </a>
        
        <% if (locals.user) { %>
            <hr class="sidebar-divider">

            <% if (user.role === 'training_partner') { %>
                <a href="/trainings/new"><i class="bi bi-plus-square-dotted"></i> Create Training</a>
            <% } %>

            <% if (user.role === 'sdma_admin' || user.role === 'ndma_admin') { %>
                <a href="/admin/manage-partners"><i class="bi bi-people-fill"></i> Manage Partners</a>
            <% } %>
        <% } %>
    </nav>

    <% if (locals.user) { %>
        <div class="sidebar-footer">
            
            <a href="/api/auth/logout" class="logout-link"><i class="bi bi-box-arrow-left"></i> Logout</a>
        </div>
    <% } %>
</aside>

